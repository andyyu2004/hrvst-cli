{
  "name": "hrvst-cli",
  "version": "1.5.0",
  "description": "CLI for Harvest",
  "author": {
    "name": "Kishan Gajera",
    "url": "http://github.com/kgajera"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kgajera/hrvst-cli.git"
  },
  "bugs": {
    "url": "https://github.com/kgajera/hrvst-cli/issues"
  },
  "keywords": [
    "cli",
    "harvest"
  ],
  "main": "dist/cli.js",
  "bin": {
    "hrvst": "dist/cli.js"
  },
  "scripts": {
    "build": "rimraf dist/* && tsc -p tsconfig.build.json",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "lint:fix": "yarn lint --fix",
    "generate": "ts-node tools/generate-cli.ts",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:coverage": "jest --coverage ----collectCoverageFrom=src/**/*",
    "watch": "nodemon --exec yarn build --watch 'src/**/*' -e ts"
  },
  "dependencies": {
    "axios": "^0.22.0",
    "chalk": "^4.1.1",
    "cli-table3": "^0.6.0",
    "inquirer": "^8.1.2",
    "lodash": "^4.17.21",
    "open": "^8.2.1",
    "ora": "^5.4.1",
    "ospath": "^1.2.2",
    "postman-collection": "^4.0.1",
    "update-notifier": "^5.1.0",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@tsconfig/node16": "^1.0.2",
    "@types/inquirer": "^7.3.3",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.171",
    "@types/node": "^16.4.2",
    "@types/ospath": "^1.2.0",
    "@types/postman-collection": "^3.5.6",
    "@types/prettier": "^2.3.2",
    "@types/supertest": "^2.0.11",
    "@types/update-notifier": "^5.1.0",
    "@types/yargs": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "babel-jest": "^27.2.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.2.4",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "files": [
    "/dist"
  ]
}
